{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
	]
}